@{
    Layout = null;
}
@{
    var result = "";
    if (IsPost)
    {
        result = "Esta pagina fue posteada utilizando el boton Aceptar";

    }
    else
    {
        result = "Esta es la primera peticion de la pagina.";
    }
}

@*bloque de instruccion simple*@
@{var total = 7;}
@{var miMensaje = "Hola Mundo";}

@*EXPRESIONES EN LINEA*@
<p>El valor de tu cuenta es= @total</p>
<p>El valor de mi mensaje es:@miMensaje</p>

@*BLOQUE CON MULTIPLES LINEAS DE INSTRUCCIONES*@
@{
    var saludo= "Bienvenido a nuestro Sitio";
    var dia= DateTime.Now.DayOfWeek;
    var saludodeBienvenida=  saludo + " Hoy es:" + dia;
    
}










<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <form action="/" method="post">
        <input type="submit" name="Submit" value="Aceptar " />
        <p>@result</p>

    </form>
    <p>El saludo es: @saludodeBienvenida</p>

    <table border="1">
        <tr>
            <td>Requested URL</td>
            <td>Relative Path</td>
            <td>Full Path</td>
            <td>HTTP Request Type</td>
        </tr>
        <tr>
            <td>@Request.Url</td>
            <td>@Request.FilePath</td>
            <td>@Request.MapPath(Request.FilePath)</td>
            <td>@Request.RequestType</td>
        </tr>
    </table>



</body>
</html>
